<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
    Welcome to Tomcat
  </description>
  <!-- include -->
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <!-- 페이지 상단에 조각파일로 include할 파일명-->
      <include-prelude>/inc/menu.jspf</include-prelude>
      <!-- 페이지 하단에 조각파일로 include할 파일명-->
      <include-coda>/inc/end.jspf</include-coda>
    </jsp-property-group>

    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/inc/bar.jspf</include-prelude>
    </jsp-property-group>
  </jsp-config>

  <error-page>
    <error-code>404</error-code>
    <location>/jsp02_error/code400.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/jsp02_error/code500.jsp</location>
  </error-page>
</web-app>